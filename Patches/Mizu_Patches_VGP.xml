<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>VGP Vegetable Garden</li>
			<!-- li>
				<packageId>dismarzero.VGP.VGPVegetableGarden</packageId>
			</li -->
		</mods>
		<match Class="PatchOperationSequence">
			<!-- success>Always</success -->
			<operations>
			<!-- Fruitdrink -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Fruitdrink"]/comps</xpath>
				<value>
					<li Class="MizuMod.CompProperties_WaterSource">
						<sourceType>Item</sourceType>
						<getSound>Ingest_Beer</getSound>
						<baseDrinkTicks>100</baseDrinkTicks>
						<waterType>NormalWater</waterType>
						<needManipulate>true</needManipulate>
						<waterAmount>0.2</waterAmount>
						<maxNumToGetAtOnce>1</maxNumToGetAtOnce>
						<waterVolume>0.5</waterVolume>
					</li>
				</value>
			</li>
			<!-- Tea -->
			<!-- Coffee -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Cuptea" or defName = "Coffee"]/comps</xpath>
				<value>
					<li Class="MizuMod.CompProperties_WaterSource">
						<sourceType>Item</sourceType>
						<getSound>Ingest_Beer</getSound>
						<baseDrinkTicks>100</baseDrinkTicks>
						<waterType>NormalWater</waterType>
						<needManipulate>true</needManipulate>
						<waterAmount>0.25</waterAmount>
						<maxNumToGetAtOnce>1</maxNumToGetAtOnce>
						<waterVolume>0.5</waterVolume>
					</li>
				</value>
			</li>
			<!-- Bowl of stew -->
			<!-- stirfry -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "bowlstew" or defName = "stirfry"]</xpath>
				<value>
					<comps>
						<li Class="MizuMod.CompProperties_WaterSource">
							<sourceType>Item</sourceType>
							<getSound>Ingest_Beer</getSound>
							<baseDrinkTicks>100</baseDrinkTicks>
							<waterType>NormalWater</waterType>
							<needManipulate>true</needManipulate>
							<waterAmount>0.1</waterAmount>
							<maxNumToGetAtOnce>1</maxNumToGetAtOnce>
							<waterVolume>0</waterVolume>
						</li>
					</comps>
				</value>
			</li>
			<!-- Chocomilk -->
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName = "Chocomilk"]</xpath>
				<value>
					<comps>
						<li Class="MizuMod.CompProperties_WaterSource">
							<sourceType>Item</sourceType>
							<getSound>Ingest_Beer</getSound>
							<baseDrinkTicks>100</baseDrinkTicks>
							<waterType>ClearWater</waterType>
							<needManipulate>true</needManipulate>
							<waterAmount>0.35</waterAmount>
							<maxNumToGetAtOnce>1</maxNumToGetAtOnce>
							<waterVolume>0.5</waterVolume>
						</li>
					</comps>
				</value>
			</li>
			</operations>
		</match>
	</Operation>
</Patch>
